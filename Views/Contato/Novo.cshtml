@using ControleDeContatos.Models.Dtos
@model ContatoPost
@{
    ViewData["title"] = "Novo contato";
 
}
<div class="text-center">
    <h1 class="display-4">Novo Contato</h1>
    <form method="Post" asp-controller="Contato" asp-action="Novo">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control @((ViewData.ModelState["Nome"] != null && ViewData.ModelState["Nome"].Errors.Count > 0) ? "is-invalid" : "")" id="nome" placeholder="Digite o nome do contato...">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="text" asp-for="Email" class="form-control @((ViewData.ModelState["Email"] != null && ViewData.ModelState["Email"].Errors.Count > 0) ? "is-invalid" : "")" id="email" placeholder="Digite o email do contato...">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="mb-3">
            <label for="tel" class="form-label">Telefone</label>
            <input type="text" asp-for="Telefone" class="form-control @((ViewData.ModelState["Telefone"] != null && ViewData.ModelState["Telefone"].Errors.Count > 0) ? "is-invalid" : "")" id="tel" placeholder="Digite o telefone do contato...">
            @Html.ValidationMessageFor(x => x.Telefone)
        </div>
        <div class="d-grid gap-2">
            <button type="submit" class=" btn btn-primary ">Salvar</button>
            <a role="button" class=" btn btn-secondary " asp-controller="Contato" asp-action="Index">Voltar</a>
        </div>
        
    </form>

</div>
